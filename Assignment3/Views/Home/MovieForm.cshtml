@{
    ViewData["Title"] = "Add a Film to the Collection";
}
@model Assignment3.Models.ApplicationResponse
<h1>@ViewBag.Title</h1>
<form asp-action="MovieForm" method="post">
    <div>
        <label asp-for="Title">Movie Title:</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
    </div>
    <div>
        <label asp-for="Year">Year Made:</label>
        <input asp-for="Year" />
    </div>
    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
    </div>
    <div>
        <label asp-for="Rating">Movie Rating: </label>
        <select asp-for="Rating">
            <option value="">Choose One</option>
            <option value="R">R</option>
            <option value="PG-13">PG-13</option>
            <option value="PG">PG</option>
            <option value="G">G</option>
        </select>
    </div>
    <div>

        @Html.ValidationMessageFor(model => model.Edited, "", new { @class = "text-danger" })

        <label asp-for="Edited">Edited? (Optional):</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div>
        <label asp-for="Lent">Lent To (Optional):</label>
        <input asp-for="Lent" />
    </div>
    <div>
        <label asp-for="Notes">Notes (Optional):</label>
        <input asp-for="Notes" />
    </div>
    <button type="submit">Submit Your Movie</button>
    <div asp-validation-summary="All"></div>
</form>